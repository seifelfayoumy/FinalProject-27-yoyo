{
    "info": {
        "name": "Admin Password Tests",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "1. Login (Get Token)",
            "request": {
                "method": "POST",
                "url": {
                    "raw": "http://localhost:8084/api/admins/login",
                    "query": [
                        {
                            "key": "username",
                            "value": "firstadmin"
                        },
                        {
                            "key": "password",
                            "value": "admin123"
                        }
                    ]
                }
            }
        },
        {
            "name": "2a. Update Password - Success",
            "request": {
                "method": "PUT",
                "url": {
                    "raw": "http://localhost:8084/api/admins/{{admin_id}}/password",
                    "query": [
                        {
                            "key": "currentPassword",
                            "value": "admin123"
                        },
                        {
                            "key": "newPassword",
                            "value": "NewSecure123!"
                        }
                    ]
                },
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{jwt_token}}"
                    }
                ]
            }
        },
        {
            "name": "2b. Update Password - Wrong Current Password",
            "request": {
                "method": "PUT",
                "url": {
                    "raw": "http://localhost:8084/api/admins/{{admin_id}}/password",
                    "query": [
                        {
                            "key": "currentPassword",
                            "value": "wrongpassword"
                        },
                        {
                            "key": "newPassword",
                            "value": "NewSecure123!"
                        }
                    ]
                },
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{jwt_token}}"
                    }
                ]
            }
        },
        {
            "name": "2c. Update Password - Invalid New Password",
            "request": {
                "method": "PUT",
                "url": {
                    "raw": "http://localhost:8084/api/admins/{{admin_id}}/password",
                    "query": [
                        {
                            "key": "currentPassword",
                            "value": "admin123"
                        },
                        {
                            "key": "newPassword",
                            "value": "weak"
                        }
                    ]
                },
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{jwt_token}}"
                    }
                ]
            }
        },
        {
            "name": "3a. Forgot Password - Request Reset",
            "request": {
                "method": "POST",
                "url": {
                    "raw": "http://localhost:8084/api/admins/forgot-password",
                    "query": [
                        {
                            "key": "email",
                            "value": "firstadmin@gmail.com"
                        }
                    ]
                }
            }
        },
        {
            "name": "3b. Reset Password - With Token",
            "request": {
                "method": "POST",
                "url": {
                    "raw": "http://localhost:8084/api/admins/reset-password",
                    "query": [
                        {
                            "key": "token",
                            "value": "{{reset_token}}"
                        },
                        {
                            "key": "newPassword",
                            "value": "NewSecure456!"
                        }
                    ]
                }
            }
        },
        {
            "name": "3c. Reset Password - Invalid Token",
            "request": {
                "method": "POST",
                "url": {
                    "raw": "http://localhost:8084/api/admins/reset-password",
                    "query": [
                        {
                            "key": "token",
                            "value": "invalid-token"
                        },
                        {
                            "key": "newPassword",
                            "value": "NewSecure456!"
                        }
                    ]
                }
            }
        }
    ],
    "variable": [
        {
            "key": "jwt_token",
            "value": "your_jwt_token_here"
        },
        {
            "key": "admin_id",
            "value": "your_admin_id_here"
        },
        {
            "key": "reset_token",
            "value": "token_from_email"
        }
    ]
} 